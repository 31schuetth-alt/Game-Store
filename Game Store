            { id: 'soundboard', title: 'Soundboard', desc: "A collection of fun sounds to play with.", icon: 'üîä', url: 'https://raw.githubusercontent.com/31schuetth-alt/Soundbaord/refs/heads/main/Soundboard' }
        ];

        // --- GLOBAL STATE ---
        const STORAGE_PREFIX = 'retroStore_v4_';
        let currentUserId = null;
        let usersIndex = []; 

        // --- CURRENT SESSION DATA ---
        let ownedGameIds = [];
        let isDownloading = false;
        let totalRuntime = 0; 
        let runtimeInterval = null; 
        let lastActivityTime = 0; 
        
        let userProfile = { 
            name: "Player One", 
            pic: "https://api.dicebear.com/7.x/avataaars/svg?seed=Felix",
            creationDate: Date.now(),
            seenUpdateLog: false // New flag for Update 1.1
        };
        
        let gameStats = {}; 

        // --- OS WINDOW MANAGEMENT ---
        const activeWindows = {}; 
        let highestZIndex = 1000;

        // --- CORE FUNCTIONS ---

        function init() {
            const savedIndex = localStorage.getItem(STORAGE_PREFIX + 'users_index');
            if (savedIndex) {
                try { usersIndex = JSON.parse(savedIndex); } catch(e) { console.error(e); }
            }
            renderLoginScreen();
            
            // Listeners
            window.addEventListener('mousemove', updateActivity);
            window.addEventListener('keydown', updateActivity);
            window.addEventListener('click', updateActivity);
            window.addEventListener('message', (e) => { if(e.data === 'activity') updateActivity(); });
        }

        // --- NEW PROFILE LOGIC ---

        function createNewProfile() {
            document.getElementById('new-profile-name').value = "New Player";
            document.getElementById('new-profile-modal').classList.remove('hidden');
            document.getElementById('new-profile-name').focus();
        }

        function closeNewProfileModal() {
            document.getElementById('new-profile-modal').classList.add('hidden');
        }

        function confirmCreateProfile() {
            const nameInput = document.getElementById('new-profile-name').value;
            const name = nameInput.trim() || "New Player";
            
            closeNewProfileModal();

            const newId = 'user_' + Date.now();
            
            const defaultData = {
                owned: [],
                profile: { 
                    name: name, 
                    pic: `https://api.dicebear.com/7.x/avataaars/svg?seed=${newId}`, 
                    creationDate: Date.now(),
                    seenUpdateLog: false // Init false for new profile
                },
                gameStats: {},
                totalRuntime: 0
            };
            
            localStorage.setItem(STORAGE_PREFIX + 'data_' + newId, JSON.stringify(defaultData));
            usersIndex.push({ id: newId, name: defaultData.profile.name, pic: defaultData.profile.pic });
            saveUserIndex();
            
            login(newId);
        }

        function saveUserIndex() {
            localStorage.setItem(STORAGE_PREFIX + 'users_index', JSON.stringify(usersIndex));
        }

        function login(userId) {
            try {
                currentUserId = userId;
                
                const saved = localStorage.getItem(STORAGE_PREFIX + 'data_' + userId);
                if (saved) {
                    const data = JSON.parse(saved);
                    ownedGameIds = data.owned || [];
                    userProfile = data.profile || userProfile;
                    gameStats = data.gameStats || {};
                    totalRuntime = data.totalRuntime || 0;
                } else {
                    ownedGameIds = []; totalRuntime = 0;
                }

                // CHECK UPDATE FLAG
                if (!userProfile.seenUpdateLog) {
                    document.getElementById('update-modal').classList.remove('hidden');
                }

                document.getElementById('login-overlay').classList.add('hidden');
                startAppTimer();
                renderStore();
                renderLibrary();
                updateTimeUI();
                updateProfileUI();
                switchTab('store'); 
            } catch (e) {
                console.error("Login failed:", e);
                alert("Error logging in.");
            }
        }

        function closeUpdateModal() {
            document.getElementById('update-modal').classList.add('hidden');
            userProfile.seenUpdateLog = true;
            saveData();
        }

        function renderLoginScreen() {
            const grid = document.getElementById('account-grid');
            let html = '';
            usersIndex.forEach(u => {
                html += `<div class="account-card" onclick="login('${u.id}')">
                            <img class="account-avatar" src="${u.pic}" alt="${u.name}">
                            <div class="account-name">${u.name}</div>
                        </div>`;
            });
            html += `<div class="account-card" onclick="createNewProfile()">
                        <div class="account-avatar add-account-btn">+</div>
                        <div class="account-name">New Profile</div>
                    </div>`;
            grid.innerHTML = html;
            document.getElementById('login-overlay').classList.remove('hidden');
        }

        function logout() {
            saveData(); 
            currentUserId = null;
            clearInterval(runtimeInterval); 
            Object.keys(activeWindows).forEach(id => closeGameWindow(id));
            renderLoginScreen();
        }

        function saveData() {
            if (!currentUserId) return;
            const data = {
                owned: ownedGameIds,
                profile: userProfile,
                gameStats: gameStats,
                totalRuntime: totalRuntime
            };
            localStorage.setItem(STORAGE_PREFIX + 'data_' + currentUserId, JSON.stringify(data));
            
            const userIndexItem = usersIndex.find(u => u.id === currentUserId);
            if (userIndexItem) {
                if (userIndexItem.name !== userProfile.name || userIndexItem.pic !== userProfile.pic) {
                    userIndexItem.name = userProfile.name;
                    userIndexItem.pic = userProfile.pic;
                    saveUserIndex();
                }
            }
        }

        // --- APP TIMER & MULTI-WINDOW STATS ---
        function startAppTimer() {
            if (runtimeInterval) clearInterval(runtimeInterval);
            runtimeInterval = setInterval(() => {
                totalRuntime += 1000; 
                Object.keys(activeWindows).forEach(id => {
                    if (!activeWindows[id].minimized) {
                        if (!gameStats[id]) initGameStat(id);
                        gameStats[id].playtime += 1000;
                    }
                });
                updateTimeUI();
                if (totalRuntime % 60000 === 0) saveData(); 
            }, 1000);
        }

        // --- UTILS ---

        function updateActivity() { lastActivityTime = Date.now(); }

        function switchTab(tabName) {
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            const btn = document.getElementById('btn-' + tabName);
            if(btn) btn.classList.add('active');

            ['store', 'library', 'stats', 'chat'].forEach(v => {
                document.getElementById('view-' + v).classList.toggle('hidden', v !== tabName);
            });
            
            if(tabName === 'library') renderLibrary();
            if(tabName === 'stats') renderAccountStats();
        }

        function updateTimeUI() { document.getElementById('total-time').innerText = formatTime(totalRuntime); }
        function updateProfileUI() {
            document.getElementById('username').innerText = userProfile.name;
            document.getElementById('profile-pic').src = userProfile.pic;
        }

        function formatTime(ms) {
            const s = Math.floor(ms / 1000), m = Math.floor(s / 60), h = Math.floor(m / 60);
            return `${h}h ${m % 60}m`;
        }
        function formatTimeLong(ms) {
            if (!ms) return "0m";
            const s = Math.floor(ms / 1000), m = Math.floor(s / 60), h = Math.floor(m / 60);
            if (h > 0) return `${h} hours, ${m % 60} minutes`;
            return `${m} minutes`;
        }
        function formatDate(ms) { return !ms ? "Unknown" : new Date(ms).toLocaleDateString(); }
        function formatRelativeTime(ms) {
            if (!ms) return "Never";
            const mins = Math.floor((Date.now() - ms) / 60000), hours = Math.floor(mins / 60), days = Math.floor(hours / 24);
            if (mins < 1) return "Just now"; if (mins < 60) return `${mins} mins ago`;
            if (hours < 24) return `${hours} hours ago`; return `${days} days ago`;
        }

        function initGameStat(id) {
            if (!gameStats[id]) gameStats[id] = { playtime: 0, dateAdded: Date.now(), lastPlayed: 0 };
        }

        // --- RENDERERS ---
        
        function renderStore() {
            const grid = document.getElementById('store-grid');
            grid.innerHTML = '';
            const gamesDisplay = availableGames.filter(g => !ownedGameIds.includes(g.id));

            if (gamesDisplay.length === 0) {
                grid.innerHTML = '<p style="color:#666">You own all available games!</p>'; return;
            }

            gamesDisplay.forEach(game => {
                const card = document.createElement('div');
                card.className = 'game-card';
                card.innerHTML = `
                    <div class="price-tag" style="color:var(--success)">FREE</div>
                    <div class="game-icon">${game.icon}</div>
                    <div class="game-title">${game.title}</div>
                    <div class="game-desc">${game.desc}</div>
                    <button class="action-btn btn-download" onclick="startRealisticDownload('${game.id}')">GET</button>
                `;
                grid.appendChild(card);
            });
        }

        function renderLibrary() {
            const grid = document.getElementById('library-grid');
            const emptyMsg = document.getElementById('empty-library-msg');
            grid.innerHTML = '';
            if (ownedGameIds.length === 0) { emptyMsg.classList.remove('hidden'); return; } 
            else { emptyMsg.classList.add('hidden'); }
            
            ownedGameIds.forEach(id => {
                const game = availableGames.find(g => g.id === id);
                if (game) {
                    let btnText = "PLAY";
                    let btnClass = "btn-play";
                    if (activeWindows[id]) {
                        if (activeWindows[id].minimized) {
                            btnText = "RESUME";
                            btnClass = "btn-resume";
                        } else {
                            btnText = "FOCUS";
                            btnClass = "btn-focus";
                        }
                    }

                    const card = document.createElement('div');
                    card.className = 'game-card';
                    card.innerHTML = `
                        <div class="game-icon">${game.icon}</div>
                        <div class="game-title">${game.title}</div>
                        <div class="game-desc">${game.desc}</div>
                        <button class="action-btn ${btnClass}" onclick="launchGameWindow('${game.id}')">${btnText}</button>
                        <button class="action-btn btn-stats" onclick="showGameStats('${game.id}')">STATS</button>
                    `;
                    grid.appendChild(card);
                }
            });
        }
        
        function renderAccountStats() {
            document.getElementById('stats-total-time').innerText = formatTimeLong(totalRuntime);
            document.getElementById('stats-created').innerText = formatDate(userProfile.creationDate);
            document.getElementById('stats-game-count').innerText = ownedGameIds.length;
            
            const list = document.getElementById('stats-game-list');
            list.innerHTML = '';
            ownedGameIds.forEach(id => {
                const game = availableGames.find(g => g.id === id);
                if (game) {
                    const tag = document.createElement('span');
                    tag.className = 'owned-tag'; tag.innerText = game.title;
                    list.appendChild(tag);
                }
            });
        }
        
        function showGameStats(id) {
            const game = availableGames.find(g => g.id === id);
            const stats = gameStats[id] || { playtime: 0, dateAdded: 0, lastPlayed: 0 };
            document.getElementById('stat-modal-title').innerText = game.title + " Stats";
            document.getElementById('game-stat-time').innerText = formatTimeLong(stats.playtime);
            document.getElementById('game-stat-date').innerText = formatDate(stats.dateAdded);
            document.getElementById('game-stat-last').innerText = formatRelativeTime(stats.lastPlayed);
            document.getElementById('game-stats-modal').classList.remove('hidden');
        }

        // --- DOWNLOAD SYSTEM ---

        function startRealisticDownload(id) {
            if (isDownloading) return;
            const game = availableGames.find(g => g.id === id);
            
            const bar = document.getElementById('download-bar');
            document.getElementById('dl-title').innerText = `Downloading ${game.title}...`;
            const progress = document.getElementById('dl-progress');
            const status = document.getElementById('dl-status');
            const percent = document.getElementById('dl-percent');

            bar.classList.remove('hidden'); progress.style.width = '0%'; isDownloading = true;
            
            let p = 0;
            const interval = setInterval(() => {
                p += Math.random() * 2; if (p > 100) p = 100;
                progress.style.width = p + '%'; percent.innerText = Math.floor(p) + '%';
                
                if (p < 20) status.innerText = "Allocating disk space...";
                else if (p < 50) status.innerText = `Downloading ${(p*1.5).toFixed(1)} MB...`;
                else if (p < 80) status.innerText = "Verifying game files...";
                else if (p < 95) status.innerText = "Installing...";
                else status.innerText = "Finalizing...";

                if (p >= 100) {
                    clearInterval(interval);
                    setTimeout(() => {
                        ownedGameIds.push(id); initGameStat(id); saveData();
                        bar.classList.add('hidden'); isDownloading = false;
                        renderStore(); renderLibrary();
                        showToast("Game Installed!");
                    }, 800);
                }
            }, 90); 
        }

        // --- MULTI-WINDOW & GAME OS LOGIC ---

        function makeDraggable(winElement, titlebarElement) {
            let isDragging = false;
            let startX, startY, initialX, initialY;

            // Handlers defined inside to capture closure scope
            const onMouseDown = (e) => {
                if (e.target.closest('.window-controls')) return; 
                e.preventDefault(); // Prevent text selection
                isDragging = true;
                winElement.style.zIndex = ++highestZIndex; 
                
                const iframe = winElement.querySelector('iframe');
                if(iframe) iframe.style.pointerEvents = 'none';

                startX = e.clientX; startY = e.clientY;
                const rect = winElement.getBoundingClientRect();
                initialX = rect.left; initialY = rect.top;
            };

            const onMouseMove = (e) => {
                if (!isDragging) return;
                const dx = e.clientX - startX;
                const dy = e.clientY - startY;
                winElement.style.left = `${initialX + dx}px`;
                winElement.style.top = `${initialY + dy}px`;
            };

            const onMouseUp = () => {
                if (isDragging) {
                    isDragging = false;
                    const iframe = winElement.querySelector('iframe');
                    if(iframe) iframe.style.pointerEvents = 'auto';
                }
            };

            // Attach
            titlebarElement.addEventListener('mousedown', onMouseDown);
            document.addEventListener('mousemove', onMouseMove);
            document.addEventListener('mouseup', onMouseUp);
            
            const onWinClick = () => {
                if (winElement.style.zIndex != highestZIndex) winElement.style.zIndex = ++highestZIndex;
            };
            winElement.addEventListener('mousedown', onWinClick);

            // Return cleanup function
            return () => {
                titlebarElement.removeEventListener('mousedown', onMouseDown);
                document.removeEventListener('mousemove', onMouseMove);
                document.removeEventListener('mouseup', onMouseUp);
                winElement.removeEventListener('mousedown', onWinClick);
            };
        }

        const pauseManagerScript = `
        <style>
            #os-universal-pause-overlay {
                position: fixed; top:0; left:0; width:100%; height:100%;
                background: rgba(0,0,0,0.7); color: white;
                display: flex; flex-direction: column; justify-content: center; align-items: center;
                font-family: 'Segoe UI', sans-serif; 
                z-index: 2147483647; 
                opacity: 0; pointer-events: none; transition: opacity 0.2s;
            }
            #os-universal-pause-overlay.paused { opacity: 1; pointer-events: all; }
            #os-universal-pause-overlay h1 { font-size: 4rem; margin: 0; text-shadow: 0 5px 15px rgba(0,0,0,1); }
            #os-universal-pause-overlay p { font-size: 1.2rem; color: #aaa; margin-top: 10px; }
        </style>
        <div id="os-universal-pause-overlay">
            <h1>PAUSED</h1>
            <p>Press <b>P</b> + <b>ENTER</b> to resume</p>
        </div>
        <script>
            (function() {
                let isPaused = false;
                let keys = {};
                const overlay = document.getElementById('os-universal-pause-overlay');
                
                const originalRaf = window.requestAnimationFrame;
                let rafCallbacks = [];

                window.requestAnimationFrame = function(callback) {
                    if (isPaused) {
                        const id = Math.random();
                        rafCallbacks.push({id, callback});
                        return id;
                    }
                    return originalRaf.call(window, callback);
                };

                function togglePause() {
                    isPaused = !isPaused;
                    if (isPaused) {
                        overlay.classList.add('paused');
                    } else {
                        overlay.classList.remove('paused');
                        const queued = rafCallbacks;
                        rafCallbacks = [];
                        queued.forEach(q => originalRaf.call(window, q.callback));
                    }
                }

                window.addEventListener('message', (e) => {
                    if (e.data === 'os_pause' && !isPaused) togglePause();
                    if (e.data === 'os_resume' && isPaused) togglePause();
                });

                window.addEventListener('keydown', e => {
                    keys[e.key.toLowerCase()] = true;
                    if (keys['p'] && keys['enter']) {
                        togglePause();
                        keys['p'] = false; keys['enter'] = false;
                    }
                });
                
                window.addEventListener('keyup', e => {
                    keys[e.key.toLowerCase()] = false;
                });
            })();
        <\/script>
        `;

        async function launchGameWindow(id) {
            const game = availableGames.find(g => g.id === id);
            if (!game) return;
            
            if (activeWindows[id]) {
                const winData = activeWindows[id];
                winData.element.classList.remove('hidden');
                winData.minimized = false;
                winData.element.style.zIndex = ++highestZIndex;
                if(winData.iframe && winData.iframe.contentWindow) {
                    winData.iframe.contentWindow.postMessage('os_resume', '*');
                }
                renderLibrary();
                return;
            }

            if (!gameStats[id]) initGameStat(id);
            gameStats[id].lastPlayed = Date.now();
            saveData();

            const winEl = document.createElement('div');
            winEl.className = 'game-window';
            winEl.id = `window-${id}`;
            winEl.style.width = '800px';
            winEl.style.height = '600px';
            
            const startX = Math.max(100, (window.innerWidth - 800) / 2 + (Object.keys(activeWindows).length * 30));
            const startY = Math.max(50, (window.innerHeight - 600) / 2 + (Object.keys(activeWindows).length * 30));
            winEl.style.left = startX + 'px';
            winEl.style.top = startY + 'px';
            winEl.style.zIndex = ++highestZIndex;

            winEl.innerHTML = `
                <div class="window-titlebar" id="titlebar-${id}">
                    <span style="font-weight:bold; font-size:0.9rem;">${game.title} <span style="font-size:0.7rem; font-weight:normal; color:#888;">(P + Enter to Pause)</span></span>
                    <div class="window-controls">
                        <button class="win-btn minimize" onclick="minimizeWindow('${id}')" title="Minimize">_</button>
                        <button class="win-btn" onclick="toggleFullscreen('${id}')" title="Fullscreen">‚õ∂</button>
                        <button class="win-btn close" onclick="closeGameWindow('${id}')" title="Close">‚úï</button>
                    </div>
                </div>
                <div class="game-content-area">
                    <div class="launcher-screen" id="launcher-${id}">
                        <div class="spinner"></div>
                        <h3 style="margin-top:0">Launching OS VM...</h3>
                        <p style="color:#666; font-size:0.8rem">Preparing runtime environment</p>
                    </div>
                    <iframe id="iframe-${id}" sandbox="allow-scripts allow-same-origin allow-popups allow-forms" style="opacity: 0;"></iframe>
                </div>
            `;
            
            document.body.appendChild(winEl);
            // makeDraggable now returns a cleanup function
            const cleanupDrag = makeDraggable(winEl, winEl.querySelector('.window-titlebar'));
            
            const iframe = winEl.querySelector(`#iframe-${id}`);
            const launcher = winEl.querySelector(`#launcher-${id}`);

            activeWindows[id] = { element: winEl, iframe: iframe, minimized: false, cleanup: cleanupDrag };
            renderLibrary();

            try {
                if (game.url === 'about:blank') {
                     iframe.srcdoc = `<div style="color:white;display:flex;justify-content:center;align-items:center;height:100%;flex-direction:column;font-family:sans-serif;"><h1>${game.title}</h1><p>Demo Mode - Gameplay not available</p></div>`;
                } else {
                    const response = await fetch(game.url);
                    if (!response.ok) throw new Error("Network response was not ok");
                    let code = await response.text();
                    
                    iframe.srcdoc = pauseManagerScript + code;
                }
            } catch (err) {
                iframe.srcdoc = `<h1 style="color:white;text-align:center;padding-top:20px;font-family:sans-serif;">Error loading game.</h1>`;
            }
            
            setTimeout(() => {
                launcher.classList.add('hidden');
                iframe.style.opacity = '1';
                iframe.focus();
            }, 1500);
        }

        function minimizeWindow(id) {
            if (activeWindows[id]) {
                const winData = activeWindows[id];
                winData.minimized = true;
                winData.element.classList.add('hidden');
                
                if(winData.iframe && winData.iframe.contentWindow) {
                    winData.iframe.contentWindow.postMessage('os_pause', '*');
                }
                
                renderLibrary();
            }
        }

        function closeGameWindow(id) {
            if (activeWindows[id]) {
                const winData = activeWindows[id];
                if (document.fullscreenElement && document.fullscreenElement.id === `window-${id}`) {
                    document.exitFullscreen();
                }
                
                // Cleanup dragging listeners
                if(winData.cleanup) winData.cleanup();

                winData.element.remove();
                delete activeWindows[id];
                saveData(); 
                renderLibrary();
            }
        }

        function toggleFullscreen(id) {
            const elem = document.getElementById(`window-${id}`);
            if (!elem) return;
            
            if (!document.fullscreenElement) {
                elem.requestFullscreen().catch(err => { console.error(`Error: ${err.message}`); });
            } else {
                document.exitFullscreen();
            }
        }

        function showToast(msg, isError = false) {
            const toast = document.getElementById('toast');
            document.getElementById('toast-msg').innerText = msg;
            document.getElementById('toast-icon').innerText = isError ? "‚ö†Ô∏è" : "‚ÑπÔ∏è";
            if (isError) toast.classList.add('error'); else toast.classList.remove('error');
            toast.classList.add('show');
            setTimeout(() => { toast.classList.remove('show'); }, 3000);
        }

        function openProfileModal() {
            document.getElementById('profile-modal').classList.remove('hidden');
            document.getElementById('edit-username').value = userProfile.name;
            document.getElementById('edit-preview-img').src = userProfile.pic;
            document.getElementById('edit-file-input').value = "";
        }
        function closeProfileModal() { document.getElementById('profile-modal').classList.add('hidden'); }
        function previewFile() {
            const fileInput = document.getElementById('edit-file-input');
            const preview = document.getElementById('edit-preview-img');
            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) { preview.src = e.target.result; }
                reader.readAsDataURL(fileInput.files[0]);
            }
        }
        function saveProfile() {
            const nameInput = document.getElementById('edit-username').value;
            const preview = document.getElementById('edit-preview-img');
            if (nameInput.trim()) {
                userProfile.name = nameInput.trim();
                document.getElementById('username').innerText = userProfile.name;
            }
            if (preview.src !== userProfile.pic) {
                userProfile.pic = preview.src;
                document.getElementById('profile-pic').src = userProfile.pic;
            }
            saveData(); closeProfileModal();
        }

        init();

    </script>
</body>
</html>
